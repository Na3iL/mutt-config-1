# Note: requires ../nametrans.py

[general]
ui = ttyui
accounts = Gmail,Ideeli
maxsyncaccounts = 2
pythonfile = ~/.mutt/nametrans.py

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account Gmail]
localrepository = Gmail-Local
remoterepository = Gmail-Remote

[Account Ideeli]
localrepository = Ideeli-Local
remoterepository = Ideeli-Remote

[Repository Gmail-Local]
type = Maildir
localfolders = ~/Mail/Gmail
nametrans = nt_local

[Repository Ideeli-Local]
type = Maildir
localfolders = ~/Mail/Ideeli
nametrans = nt_local

[Repository Gmail-Remote]
type = Gmail
remoteuser = you@gmail.com
remotepass = password
realdelete = no
postsynchook = notmuch new
maxconnections = 3
nametrans = nt_remote

# needed since v6.5.4
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository Ideeli-Remote]
type = Gmail
remoteuser = you@ideeli.com
remotepass = password
realdelete = no
maxconnections = 3
nametrans = nt_remote
folderfilter = exclude([ 'Foo', 'Bar' ])
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

# vim: ft=cfg
